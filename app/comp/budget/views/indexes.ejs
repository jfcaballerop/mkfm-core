<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>

        <style>
            /* Always set the map height explicitly to define the size of the div
             * element that contains the map. */

            #map {
                height: 100%;
            }

            /* Optional: Makes the sample page fill the window. */

            html,
            body {
                height: 100%;
                margin: 0;
                padding: 0;
            }

            #info-box {
                background-color: white;
                border: 1px solid black;
                bottom: 30px;
                height: 30px;
                padding: 5px;
                position: absolute;
                left: 30px;
            }
        </style>
</head>

<body>

    <section id="container">
        <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
        <!--header start-->
        <header class="header black-bg">
            <% include partials/header %>
        </header>
        <!--header end-->

        <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <% include partials/left_menu %>

        </aside>
        <!--sidebar end-->
        <!-- main content Permission denied -->
        <% if(!token.admin) {%>
            <% include partials/error_permissions %>
                <!-- End permission denied -->
                <%} else {%>
                    <!--main content start-->
                    <section id="main-content">
                        <section class="wrapper site-min-height">
                            <div class="row mt">
                                <div class="col-md-12">
                                    <h3>
                                        <i class="fa fa-angle-right"></i>
                                        <%- trans('MENU_PANEL_BUDGET') %>
                                    </h3>
                                </div>
                            </div>
                            <!-- page start-->
                            <div class="row mt" id="">
                                <div class="col-md-3">
                                    <div class="form-panel">
                                        <div class="row mt">
                                            <!-- Budget Criteria -->
                                            <div class="col-md-12">
                                                <h5 class="mb">
                                                    <i class="fa fa-angle-right"></i> Budget Criteria
                                                </h5>

                                                <div class="radio">
                                                    <label for="Globalbudget">
                                                        <input type="radio" name="optionsRadios" id="Globalbudget" value="Globalbudget"> Global budget
                                                    </label>
                                                    <br>
                                                    <label for="Annualavailablebudget">
                                                        <input type="radio" name="optionsRadios" id="Annualavailablebudget" value="Annualavailablebudget"> Annual available budget
                                                    </label>
                                                    <div id="amountdiv" style="display: none">
                                                        <div class="row mt">
                                                            <div class="col-md-12">
                                                                <button type="button" id="graphAnnual" class="btn btn-theme">
                                                                    <i class="fa fa-chart-pie"></i> Graph</button>
                                                            </div>
                                                        </div>
                                                        <br>
                                                        <label for="amount">
                                                            Amount (Millions EC$):
                                                            <input type="number" id="ammount" name="ammount" value="<%- retValues.budget.ammount %>">
                                                        </label>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                        <%- include('partials/menu_annual_available_budget.ejs'); %>
                                            <%- include('partials/menu_global_budget.ejs'); %>
                                    </div>
                                </div>
                                <!-- PARTE DCHA DE RESULTADOS-->
                                <div class="col-md-9">
                                    <div class="col-md-12" id="content_global" style="display: none">

                                        <%- include('partials/content_global_budget_natural.ejs'); %>
                                            <%- include('partials/content_global_budget_physical.ejs'); %>
                                                <%- include('partials/content_global_budget_graph.ejs'); %>
                                    </div>
                                    <%- include('partials/content_annual_available_budget.ejs'); %>
                                </div>
                                <!-- PARTE DCHA DE RESULTADOS-->

                            </div>
                            <div class="row mt">

                            </div>

                            <!-- page end-->
                        </section>
                    </section>
                    <!-- /MAIN CONTENT -->
                    <% } %>
                        <!--main content end-->
                        <!--footer start-->
                        <footer class="site-footer">
                            <% include partials/footer %>
                        </footer>
                        <!--footer end-->
    </section>

    <% include partials/footer_scripts %>
        <!-- js placed at the end of the document so the pages load faster -->


        <!--common script for all pages-->
        <script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>



        <!--script for this page-->
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
        <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
        <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script> -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>
        <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script> -->
        <%- include('partials/budget_scripts'); %>
            <%- include('partials/graph_scripts'); %>
                <script src="/assets/js/jquery.table2excel.min.js"></script>
                <script src="/assets/js/gmaps/gmaps.js"></script>



</body>

</html>