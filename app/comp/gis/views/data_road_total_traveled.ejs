<!DOCTYPE html>
<html lang="es">

<head>
    <% include partials/head %>


</head>

<body>

    <section id="container">
        <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
        <!--header start-->
        <header class="header black-bg">
            <% include partials/header %>
        </header>
        <!--header end-->

        <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <% include partials/left_menu %>

        </aside>
        <!--sidebar end-->

        <!-- **********************************************************************************************************************************************************
        ***** Google Maps      
        *********************************************************************************************************************************************************** -->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper site-min-height">
                <h3><i class="fa fa-angle-right"></i> Road Total Km Traveled</h3>
                <!-- page start-->
                <div class="row mt">
                    <div class="col-md-12" style="height:80vh;">
                        <div class="content-panel">
                            <div class="form-panel">
                                <% var totalKM = 0; %>

                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">DISTANCE: <span id="totalkm"></span></label>
                                    </div>

                                    <div id="accordion">
                                        <table id="dataTable" class="table table-striped table-xs">
                                            <thead>
                                                <tr>
                                                    <td>#</td>
                                                    <td>Road</td>
                                                    <td>Seg</td>
                                                    <td>KM</td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var i=0;
                                                    var pk = 0;
                                                    road_tk.roadName.forEach(function(val, index){ 
                                                        totalKM += road_tk.roadKm[index]; 
                                                   %>

                                                    <tr>

                                                        <td>
                                                            <%- index %>
                                                        </td>
                                                        <td>
                                                            <%- val %>
                                                        </td>
                                                        <td>
                                                            <%- road_tk.roadTime[index] %>
                                                        </td>
                                                        <td>
                                                            <%- Math.round(road_tk.roadKm[index]/10)/100 %>
                                                        </td>
                                                    </tr>
                                                    <%
                                                }); %>
                                            </tbody>
                                        </table>
                                    </div>
                            </div>
                            <!-- form panel-->

                        </div>
                        <!--/content-panel -->
                    </div>
                </div>
                <!-- page end-->
            </section>
        </section>
        <!-- /MAIN CONTENT -->

        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <% include partials/footer %>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <!-- <script src="/assets/js/jquery.js"></script> -->
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>


    <!--common script for all pages-->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="/assets/js/common-scripts.js"></script>
    <script src="https://momentjs.com/downloads/moment-with-locales.min.js"></script>

    <!--script for this page-->
    <% include partials/footer_scripts %>
        <script>
            $(document).ready(function() {
                var val = <%- totalKM %>
                $('#totalkm').text(Math.round(val / 10) / 100 + ' km');
                $('#totalkm').css('font-weight', 'bold');
            });
        </script>

</body>

</html>