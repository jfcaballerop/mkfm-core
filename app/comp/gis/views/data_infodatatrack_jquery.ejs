</head>

<body>

    <section id="container">
        <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
        <!--header start-->
        <header class="header black-bg">
            <% include partials/header %>
        </header>
        <!--header end-->

        <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <% include partials/left_menu %>

        </aside>
        <!--sidebar end-->

        <!-- **********************************************************************************************************************************************************
            ***** Google Maps      
            *********************************************************************************************************************************************************** -->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper site-min-height">

                <!-- page start-->
                <div class="row mt">
                    <div class="col-md-12">
                        <h3>
                            <i class="fa fa-angle-right"></i>
                            <%- trans('EDIT_VIDEO_INFO_TITLE') %>
                        </h3>
                        <div class="content-panel">

                            <div id="accordion">
                                <div class="form-panel">
                                    <form id="form" class="form-horizontal style-form" method="post" action="/auth/WEB/infodatatrack/update_videoinfodatatrack">

                                        <div class="row mt">

                                            <input type="hidden" name="infodatatrack[_id]" value="<%- infodatatrack._id %>">
                                            <input type="hidden" name="infodatatrack[inverted]" value="<%- infodatatrack.inverted %>">
                                            <label class="col-xs-2 control-label">
                                                <%- trans('ROAD') %> : </label>
                                            <div class="col-xs-6">
                                                <input name="infodatatrack[properties][name]" type="text" class="form-control round-form input-sm" value="<%- infodatatrack.properties.name %>"
                                                    required>
                                                <input name="infodatatrack[properties][video_roads]" type="hidden" class="form-control round-form input-sm" value="<%- infodatatrack.properties.video_roads %>"
                                                    required>
                                            </div>
                                            <div class="col-xs-4">
                                                <button type="submit" class="btn btn-success btn-lg">
                                                    <i class="fa fa-check"></i>
                                                    <%- trans('MODIFY') %>
                                                </button>
                                                <button onclick="window.location='/auth/WEB/maps/view_data';" type="button" class="btn btn-danger" data-dismiss="modal">
                                                    <%- trans('CANCEL') %>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="row mt">
                                            <div class="col-xs-4">
                                                <b>
                                                    <%- trans('UPDATED') %>:</b>
                                                <%- moment(infodatatrack.updated_at).format('DD/MM/YYYY HH:mm:ss') %>
                                            </div>

                                            <div class="col-xs-4">
                                                <b>Inverted:</b>
                                                <%- infodatatrack.inverted %>
                                            </div>
                                        </div>
                                        <div class="row mt">

                                            <div class="col-xs-4">
                                                <button id="showall" type="button" class="btn btn-round btn-success">
                                                    <i class="fa fa-eye"></i>
                                                    <%- trans('EDIT_VIDEO_INFO_SHOW')%>
                                                </button>
                                                <button id="checkcoord" type="button" class="btn btn-round btn-warning">
                                                    <i class="fa fa-files-o"></i>
                                                    <%- trans('EDIT_VIDEO_INFO_CHECK')%>
                                                </button>
                                                <button id="addcoord" type="button" class="btn btn-round btn-theme03">
                                                    <i class="fa fa-plus"></i>
                                                    <%- trans('EDIT_VIDEO_INFO_ADD')%>
                                                </button>
                                                <button id="inverted" type="button" class="btn btn-round btn-primary">
                                                    <i class="fa fa-refresh"></i>
                                                    <%- trans('EDIT_VIDEO_INFO_INV')%>
                                                </button>
                                            </div>
                                        </div>

                                        <!-- <div class="col-xs-12">
                                                <div class="progress progress-striped active">
                                                    <div id="progressbar" class="progress-bar" role="progressbar" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100" style="width: 15%">
                                                        <span class="sr-only">15% Complete</span>
                                                    </div>
                                                </div>
                                            </div> -->

                                        <div class="row mt">
                                            <div class="col-md-12">
                                                <div class="paging"></div>
                                                <div class="table-responsive">

                                                    <table id="dataTable" class="table table-bordered table-xs">
                                                    </table>
                                                </div>



                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- form panel-->

                    </div>
                    <!--/content-panel -->
                </div>
                <!-- page end-->
            </section>
        </section>
        <!-- /MAIN CONTENT -->
        <!-- MODAL SECTION -->
        <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- Modal -->
        <% include ./partials/modals/modal_modifykobo %>
            <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
            <!-- /MODAL SECTION -->

            <!--main content end-->
            <!--footer start-->
            <footer class="site-footer ">
                <% include partials/footer %>
            </footer>
            <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <% include partials/footer_scripts %>


        <script src="https://momentjs.com/downloads/moment-with-locales.min.js "></script>
        <script src="/assets/js/jquery-dateFormat.js"></script>

        <!--script for this page-->

        <%# include ./partials/data_infodt_paint_form_jquery %>

            <% include ./partials/plugins/plugin_jquery %>
                <% include ./partials/data_infodt_paint_form %>


</body>

</html>