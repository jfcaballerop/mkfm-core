                                                    // console.log(k1);
                                                    // console.log(v1);
                                                    // console.log(v.properties[v1]);

                                                    if (arrColumnsChecked.indexOf(
                                                            v1) >= 0) {
                                                        if (v.properties[v1]
                                                            [
                                                                row
