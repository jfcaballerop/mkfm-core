                $('#selectFormula').empty();
                $('#formulaName').append(form.properties.HTML.text);
                // console.log(form.properties.HTML.id);
                switch ($this[0].id) {
                    case "AssetCriticality":
                        $('#formulaSpec').empty();
                        $('#selectFormula').empty();
