    function clickButton(id) {
        //alert('click');
        // TODO: Start spinner
        $('#spinner' + id).show();
        $('#resultUpdate' + id).empty();
        var $this = $('#' + id);
        console.log($this.attr('id'));
        var arrCallProm = $this.attr('id').split('__');
