<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>

        <style>
            /* Always set the map height explicitly to define the size of the div
             * element that contains the map. */
            
            #map {
                height: 100%;
            }
            /* Optional: Makes the sample page fill the window. */
            
            html,
            body {
                height: 100%;
                margin: 0;
                padding: 0;
            }
            
            #info-box {
                background-color: white;
                border: 1px solid black;
                bottom: 30px;
                height: 30px;
                padding: 5px;
                position: absolute;
                left: 30px;
            }
            
            .search {
                position: relative;
                color: #aaa;
                font-size: 16px;
            }
            
            .search input {
                width: 250px;
                height: 32px;
                background: #fcfcfc;
                border: 1px solid #aaa;
                border-radius: 5px;
                box-shadow: 0 0 3px #ccc, 0 10px 15px #ebebeb inset;
            }
            
            .search input {
                text-indent: 32px;
            }
            
            .search .fa-search {
                position: absolute;
                top: 10px;
                left: 10px;
            }
        </style>
</head>

<body>

    <section id="container">
        <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
        <!--header start-->
        <header class="header black-bg">
            <% include partials/header %>
        </header>
        <!--header end-->

        <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <% include partials/left_menu %>

        </aside>
        <!--sidebar end-->
        <!-- main content Permission denied -->
        <% if(!token.admin) {%>
            <% include partials/error_permissions %>
                <!-- End permission denied -->
                <%} else {%>
                    <!--main content start-->
                    <section id="main-content">
                        <section class="wrapper site-min-height">
                            <div class="row mt">
                                <div class="col-md-12">
                                    <h3>
                                        <i class="fa fa-angle-right"></i>
                                        <%- trans('MENU_PANEL_REPORT') %>
                                    </h3>

                                </div>
                            </div>
                            <!-- page start-->
                            <div class="row mt" id="bodyQuery">
                                <div class="col-md-3">
                                    <div class="form-panel">
                                        <div class="row mt">
                                            <div class="col-md-12">
                                                <div class="search">
                                                    <span class="fa fa-search"></span>
                                                    <input id="searchtool" type="text" placeholder="Search term">
                                                    <div id="spinner" class="spinner" style="display:none;">
                                                        <img id="img-spinner" src="/assets/img/gifs/ajax-loader.gif" alt="Loading" />
                                                    </div>
                                                    <div id="error" class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    <div id="response" class="alert alert-success" role="alert" style="display:none;"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt">
                                            <div class="col-md-12">
                                                <% templates.forEach(function(temp){ %>

                                                    <div class="radio">
                                                        <label>
                                                        <input type="radio" name="optionsRadios" value="<%- temp.config.HTML.id %>">
                                                        <%- temp.name %>
                                                     </label>
                                                        <br>
                                                    </div>
                                                    <% }); %>
                                            </div>
                                        </div>
                                        <div class="row mt">
                                            <div class="col-md-12">
                                                <button id="generateReport" type="button" class="btn btn-success"><i class="fa fa-file-alt"></i> Report</button>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="form-panel">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt">

                            </div>

                            <!-- page end-->
                        </section>
                    </section>
                    <!-- /MAIN CONTENT -->
                    <% } %>
                        <!--main content end-->
                        <!--footer start-->
                        <footer class="site-footer">
                            <% include partials/footer %>
                        </footer>
                        <!--footer end-->
    </section>

    <% include partials/footer_scripts %>
        <!-- js placed at the end of the document so the pages load faster -->
        <!-- <script src="/assets/js/jquery.js"></script> -->
        <script src="/assets/js/bootstrap.min.js"></script>
        <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
        <script src="/assets/js/jquery.scrollTo.min.js"></script>
        <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>


        <!--common script for all pages-->
        <script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
        <script src="/assets/js/common-scripts.js"></script>


        <!--script for this page-->
        <script src='/assets/js/pdfmake.min.js'></script>
        <script src='/assets/js/vfs_fonts.js'></script>

        <%- include('partials/reports_scripts'); %>



</body>

</html>